<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_exit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_transparent"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:text="充值成功?"
            android:textColor="#8DCDB5"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="你充值的300积分已进入积分帐号"
            android:textColor="#999999" />


        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="目前总积分为328积分"
            android:textColor="#999999" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_exit_app_press"
                android:gravity="center"
                android:padding="10dp"
                android:text="   完成   "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/keepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_exit_app_normal"
                android:gravity="center"
                android:padding="10dp"
                android:text="继续充值"
                android:textColor="#fff" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>