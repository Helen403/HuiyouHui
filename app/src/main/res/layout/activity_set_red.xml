<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color">


        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="新店开业,红包滚滚来!"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="每人领到全额随机,最低1积分起!"
            android:textColor="#B7B7B7"
            android:textSize="16sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="广告内容"
            android:textColor="#B7B7B7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right|center"
            android:hint="请输入广告内容"
            android:paddingRight="10dp"
            android:textColorHint="#DCDCDC" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="总金融"
            android:textColor="#B7B7B7"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="积分"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_2"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"

            android:layout_toLeftOf="@+id/tv_3"
            android:background="@null"
            android:gravity="right|center"
            android:hint="输入金额"

            android:textColorHint="#DCDCDC" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="个数"
            android:textColor="#B7B7B7"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="个"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_3"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_4"
            android:background="@null"
            android:gravity="right|center"
            android:hint="输入个数"
            android:paddingRight="10dp"
            android:textColorHint="#DCDCDC" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="0积分"
            android:textColor="#7C7C7C"
            android:textSize="26sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_recharge_fill"
        android:gravity="center"
        android:padding="12sp"
        android:text="发 红 包"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:textColor="#C9C9C9"
        android:layout_marginTop="5dp"
        android:text="一周未被领取,红包金额返回积分账户"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />


</LinearLayout>