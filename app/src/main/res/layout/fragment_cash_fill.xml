<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="输入内容"
            android:textColor="#C4C4C4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="积分"
            android:textColor="#CDCDCD"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/tv_1"
            android:background="@drawable/custermview_edittext"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="right|center"
            android:hint="请输入金额"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#D2D2D2"
            android:textColorHint="#E2E2E2"
            android:textSize="18sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="需支付"
            android:textColor="#C4C4C4"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="元"
            android:textColor="#CDCDCD"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_toLeftOf="@id/tv_4"
            android:background="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="00"
            android:textColor="#E2E2E2"
            android:textSize="18sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        android:text="支付方式"
        android:textColor="#C5C5C5"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_1"
            android:text="微信支付"
            android:textColor="#C5C5C5" />


        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp"

            android:src="@mipmap/ic_launcher" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_3"
            android:text="支付宝支付"
            android:textColor="#C5C5C5" />


        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp"

            android:src="@mipmap/ic_launcher" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_recharge_fill"
        android:gravity="center"
        android:padding="12sp"
        android:text="确认充值"
        android:textColor="#fff"
        android:textSize="18sp" />


</LinearLayout>